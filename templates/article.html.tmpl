<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-4M8W7JSSZ2"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-4M8W7JSSZ2');
    </script>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Primary SEO -->
    <meta name="description" content="{{ .Description }}">
    <meta name="keywords" content="{{ .Keywords }}, infrastructure consultancy, reliability engineering, operational risk, cost optimisation, platform engineering">
    <meta name="author" content="NottInfra">
    <meta name="robots" content="index, follow">

    <!-- Open Graph -->
    <meta property="og:type" content="article">
    <meta property="og:url" content="{{ .BaseURL }}/{{ .DetailPath }}/{{ .Slug }}">
    <meta property="og:title" content="{{ .Title }} | NottInfra">
    <meta property="og:description" content="{{ .Description }}">
    <meta property="og:locale" content="en_GB">
    <meta property="og:site_name" content="NottInfra">
    <meta property="article:author" content="NottInfra">
    <meta property="article:published_time" content="{{ .Created }}">
    <meta property="article:modified_time" content="{{ .Updated }}">

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary">
    <meta name="twitter:title" content="{{ .Title }} | NottInfra">
    <meta name="twitter:description" content="{{ .Description }}">

    <title>{{ .Title }} | NottInfra</title>
    <link rel="canonical" href="{{ .BaseURL }}/{{ .DetailPath }}/{{ .Slug }}">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            margin: 1.5rem;
        }

        header,
        main {
            max-width: 31.25rem;
            margin-left: auto;
            margin-right: auto;
        }

        h1,
        h2,
        h3,
        a,
        p,
        li {
            font-size: 0.78125rem;
            line-height: 1.5625rem;
            font-family: sans-serif;
        }

        h1 {
            margin: 1rem 0 1.5rem;
        }

        h2 {
            margin: 1.5rem 0 0rem;
        }

        h3 {
            margin: 1rem 0 0.5rem;
        }

        nav {
            display: flex;
            column-gap: 0.75rem;
        }

        hr {
            margin: 2rem 0;
        }

        article > p,
        [itemprop="articleBody"] > p,
        [itemprop="articleBody"] ul,
        [itemprop="articleBody"] ol {
            margin: 1rem 0 1.5rem;
        }

        [itemprop="articleBody"] ul,
        [itemprop="articleBody"] ol {
            padding-left: 1.5rem;
        }

        .article-date {
            margin-top: 0.25rem;
            margin-bottom: 1rem;
        }
    </style>
</head>

<body>
    <header role="banner">
        <p>
            Nottingham-based infrastructure consultancy specialising in reliability engineering,
            operational risk reduction, cost control, and resilient systems design.
        </p>

        <h1>NottInfra</h1>

        <nav aria-label="Main navigation">
            <a href="/">Updates</a>
            <a href="/articles">Articles</a>
            <a href="/signals">Signals</a>
            <a href="mailto:tmhoyland@icloud.com">Contact</a>
        </nav>
    </header>

    <main role="main" id="main-content">
        <article aria-labelledby="article-title" itemscope itemtype="https://schema.org/Article">
            <hr aria-hidden="true">

            <h2 id="article-title" itemprop="headline">
                {{ .Title }}
            </h2>

            <p class="article-date">
                <time datetime="{{ .Updated }}" itemprop="dateModified">{{ .DisplayUpdated }}</time>
            </p>

            <meta itemprop="datePublished" content="{{ .Created }}">
            <meta itemprop="dateModified" content="{{ .Updated }}">

            <div itemprop="articleBody">
                {{ .Body | raw }}
            </div>

            <p>
                <a href="/" aria-label="Back to homepage">Back to home</a>
            </p>
        </article>
    </main>
</body>
</html>
